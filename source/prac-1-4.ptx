        \draw[black, fill=red] (150:\r) circle (.05) node[left, yshift=2] at (150:\r) {$F$};
        \draw[black, fill=red] (180:\r) circle (.05) node[left] at (180:\r) {$G$};
        \end{tikzpicture}]]>
    </latex-image></image>
    <p><ol marker="a.">
      <li><m>\angle AOB =</m></li>
      <li><m>\angle AOC =</m></li>
